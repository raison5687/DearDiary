<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 감정 팔레트"
        android:textColor="@color/txt_color"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/txt_color" />
    <LinearLayout
        style="@style/layout_horizontal_palette">
        <TextView
            style="@style/txt_dialog_palette"
            android:text="분노"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_red"
                style="@style/btn_select_color"
                android:background="@drawable/circle_red"/>
        </LinearLayout>
        <TextView
            style="@style/txt_dialog_palette"
            android:text="행복"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_yellow"
                style="@style/btn_select_color"
                android:background="@drawable/circle_yellow"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_horizontal_palette">
        <TextView
            style="@style/txt_dialog_palette"
            android:text="우울"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_gray"
                style="@style/btn_select_color"
                android:background="@drawable/circle_gray"/>
        </LinearLayout>
        <TextView
            style="@style/txt_dialog_palette"
            android:text="보통"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_green"
                style="@style/btn_select_color"
                android:background="@drawable/circle_green"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_horizontal_palette">
        <TextView
            style="@style/txt_dialog_palette"
            android:text="평온"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_bisque"
                style="@style/btn_select_color"
                android:background="@drawable/circle_bisque"/>
        </LinearLayout>
        <TextView
            style="@style/txt_dialog_palette"
            android:text="슬픔"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_blue"
                style="@style/btn_select_color"
                android:background="@drawable/circle_blue"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_horizontal_palette"
        android:layout_marginBottom="20dp">
        <TextView
            style="@style/txt_dialog_palette"
            android:text="지침"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_pink"
                style="@style/btn_select_color"
                android:background="@drawable/circle_pink"/>
        </LinearLayout>
        <TextView
            style="@style/txt_dialog_palette"
            android:text="피곤"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_darkblue"
                style="@style/btn_select_color"
                android:background="@drawable/circle_darkblue"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>